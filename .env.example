# Server configuration
PORT=3000
NODE_ENV=development

# MongoDB configuration
MONGO_URI=mongodb://mongo:27017/stripe-api

# Redis configuration (for caching and rate limiting)
REDIS_URI=redis://redis:6379

# JWT configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_random

# Stripe configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Digital Wallet Configuration
APPLE_PAY_MERCHANT_ID=merchant.com.yourcompany.app
GOOGLE_PAY_MERCHANT_ID=your-google-merchant-id
AMAZON_PAY_MERCHANT_ID=your-amazon-merchant-id
MERCHANT_NAME=Your Company Name

# Webhook URL (for Stripe CLI)
WEBHOOK_URL=https://your-domain.com/webhook

# Security settings
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://your-frontend-domain.com,http://localhost:3000

# Logging
LOG_LEVEL=info

# Email configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@yourcompany.com

# Admin configuration
ADMIN_EMAIL=admin@example.com
ADMIN_INITIAL_PASSWORD=change_this_immediately 